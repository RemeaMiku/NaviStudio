<UserControl
    x:Class="MiraiNavi.WpfApp.Views.Pages.NavigationParameterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiraiNavi.WpfApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:NavigationParameterPage}"
    d:DesignHeight="300"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Thickness x:Key="SmallSpacing">0,3,0,0</Thickness>
        <Thickness x:Key="LargeSpacing">0,5,0,0</Thickness>
    </UserControl.Resources>
    <Border Padding="10" d:Background="Black">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock
                    d:Foreground="White"
                    FontSize="{StaticResource SmallFontSize}"
                    Text="UTC：(yyyy/MM/dd HH:mm:ss.fff)" />
                <TextBlock
                    d:Foreground="White"
                    d:Text="2023/08/31 11:45:14.831"
                    FontSize="{StaticResource LargeFontSize}"
                    Text="{Binding ViewModel.NavigationParameters.TimeStamp, StringFormat='{}{0:yyyy/MM/dd HH:mm:ss.fff}', FallbackValue='N/A', Mode=OneWay}" />
                <TextBlock
                    d:Foreground="White"
                    FontSize="{StaticResource SmallFontSize}"
                    Text="位置：B(°), L(°), H(m)" />
                <TextBlock
                    Margin="{StaticResource SmallSpacing}"
                    d:Foreground="White"
                    FontSize="{StaticResource LargeFontSize}">
                    <Run d:Text="39.114514" Text="{Binding ViewModel.NavigationParameters.GeodeticCoord.Latitude.Degrees, StringFormat='{}{0:F6}', FallbackValue='N/A', Mode=OneWay}" />
                    <Run Text="," />
                    <Run d:Text="114.114514" Text="{Binding ViewModel.NavigationParameters.GeodeticCoord.Longitude.Degrees, StringFormat='{}{0:F6}', FallbackValue='N/A', Mode=OneWay}" />
                    <Run Text="," />
                    <Run d:Text="39.114" Text="{Binding ViewModel.NavigationParameters.GeodeticCoord.H, StringFormat='{}{0:F3}', FallbackValue='N/A', Mode=OneWay}" />
                </TextBlock>
                <TextBlock
                    Margin="{StaticResource LargeSpacing}"
                    d:Foreground="White"
                    FontSize="{StaticResource SmallFontSize}"
                    Text="速度：(m/s)" />
                <TextBlock
                    Margin="{StaticResource SmallSpacing}"
                    d:Foreground="White"
                    d:Text="11.4"
                    FontSize="{StaticResource LargeFontSize}"
                    Text="{Binding ViewModel.NavigationParameters.Velocity, StringFormat='{}{0:F1}', FallbackValue='N/A', Mode=OneWay}" />
                <TextBlock
                    Margin="{StaticResource LargeSpacing}"
                    d:Foreground="White"
                    FontSize="{StaticResource SmallFontSize}"
                    Text="姿态：Yaw(°), Pitch(°)，Roll(°)" />
                <TextBlock
                    Margin="{StaticResource SmallSpacing}"
                    d:Foreground="White"
                    FontSize="{StaticResource LargeFontSize}">
                    <Run Text="{Binding ViewModel.NavigationParameters.EulerAngles.Yaw, StringFormat='{}{0:F3}', FallbackValue='N/A', Mode=OneWay}" />
                    <Run Text="," />
                    <Run Text="{Binding ViewModel.NavigationParameters.EulerAngles.Pitch, StringFormat='{}{0:F3}', FallbackValue='N/A', Mode=OneWay}" />
                    <Run Text="," />
                    <Run Text="{Binding ViewModel.NavigationParameters.EulerAngles.Roll, StringFormat='{}{0:F3}', FallbackValue='N/A', Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
